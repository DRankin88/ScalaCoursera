  /**
   * Exercise 1
   */
    def pascal(c: Int, r: Int): Int =
    {

        if ((c == 0 || r == 0) || (c == r))
        {
            1
        }
        else
        {
            pascal(c - 1, r - 1) + pascal(c, r - 1)
        }
    }

  /**
   * Exercise 2
   */
    def balance(chars: List[Char]): Boolean =
    {

        var tracker = 0

        def balanceHelper(chars: List[Char], incriment: Int): Int =
        {
            if(chars.head == '(')
            {
            	var newTracker = tracker + 1
                tracker = balanceHelper(chars.tail, newTracker)
                tracker
            }
            else if (chars.head == ')')
            {
                if (tracker - 1 < 0)
                {
                    tracker = - 1
                    tracker
                }
                else
                {
                	var newTracker = tracker - 1
                    tracker = balanceHelper(chars.tail, newTracker)
                    tracker
                }
            }
            else balanceHelper(chars.tail, tracker)

        }

        var result = balanceHelper(chars, tracker)
        println(result)

        if (result != 0) false
        else true

    }

